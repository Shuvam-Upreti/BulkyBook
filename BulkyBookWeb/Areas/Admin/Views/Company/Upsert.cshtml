
@model Company

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
   
    <div class="row">
        <div class="col-10">
                    <div class="border p-3 mt-3 row" >
        <div class="col-12 pt-2">
            <h2 class="text-primary">@(Model.Id!=0?"Update":"Create")Company</h2>
            <hr/>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <div class="name"  style="display: flex;">
            <div class="col-1">
            <label asp-for="Name"></label>
            </div>
            <div class="col-10">
            <input asp-for="Name" class="form-control"/>
            </div>
            </div>
            <span asp-validation-for="Name" class="text-danger" style="margin-left:13.5vw;"></span>
        </div>
         <div class="mb-3">
            <div class="name"  style="display: flex;">
            <div class="col-1">
            <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-10">
            <textarea asp-for="PhoneNumber" row="3" class="form-control"></textarea>
            </div>
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger" style="margin-left:13.5vw;"></span>
        </div>
         <div class="mb-3 col-6 ">
            <div class="name"  style="display: flex;">
            <div class="col-2">
            <label asp-for="StreetAddress"></label>
            </div>
            <div class="col-8">
            <input asp-for="StreetAddress" class="form-control"/>
            </div>
            </div>
            <span asp-validation-for="StreetAddress" class="text-danger" style="margin-left:13.5vw;"></span>
        </div>
         <div class="mb-3 col-6">
            <div class="name"  style="display: flex;">
            <div class="col-2">
            <label asp-for="City"></label>
            </div>
            <div class="col-8">
            <input asp-for="City" class="form-control"/>
            </div>
            </div>
            <span asp-validation-for="City" class="text-danger" style="margin-left:13.5vw;"></span>
        </div>
       
        <div class="mb-3 col-6">
            <div class="name"  style="display: flex;">
            <div class="col-2">
            <label asp-for="State"></label>
            </div>
            <div class="col-8">
            <input asp-for="State" class="form-control"/>
            </div>
            </div>
            <span asp-validation-for="State" class="text-danger" style="margin-left:13.5vw;"></span>
        </div>
         <div class="mb-3 col-6">
            <div class="name"  style="display: flex;">
            <div class="col-2">
            <label asp-for="PostalCode"></label>
            </div>
            <div class="col-8">
            <input asp-for="PostalCode" class="form-control"/>
            </div>
            </div>
            <span asp-validation-for="PostalCode" class="text-danger" style="margin-left:13.5vw;"></span>
        </div>



        <div class="col-12">
            @if(Model.Id!=0)
            {
                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
            }
            else{
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            }
        <a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
        </div>
    </div>
   
   

        </div>
       
    </div>








</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}