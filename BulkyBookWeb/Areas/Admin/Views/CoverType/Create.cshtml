
@model CoverType

<form method="post">
    <div class="border p-3 mt-3">
        <div class="row pt-2">
            <h2 class="text-primary">Create Cover Type</h2>
            <hr/>
        </div>
      @* <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <div class="name"  style="display: flex;">
            <div class="col-2">
            <label asp-for="Name"></label>
            </div>
            <div class="col-8">
            <input asp-for="Name" class="form-control"/>
            </div>
            </div>
            <span asp-validation-for="Name" class="text-danger" style="margin-left:13.5vw;"></span>
        </div>
       
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>

    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}