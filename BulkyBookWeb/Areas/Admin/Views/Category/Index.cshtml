@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
   <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary">Category List</h2>
       </div>

        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp Create New Category</a>

       </div>
       <hr/>
</div>
<table class="table table-bordered table-striped table-hover " style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Created At
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="3%">
                    @obj.Id
                </td>
                <td width="40%">
                    @obj.Name
                </td>
                <td width="15%">
                    @obj.DisplayOrder
                </td>
                <td width="20%">
                    @obj.CreatedDateTime
                </td>
                <td style="display:flex;">
                    <div class="w-50 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>&nbsp Edit</a>
                    </div>
                     <div class="w-50 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> <i class="bi bi-pencil-square"></i>&nbsp Delete</a>
                    </div>

                </td>

            </tr>
        }

    </tbody>

</table>
 </div>
